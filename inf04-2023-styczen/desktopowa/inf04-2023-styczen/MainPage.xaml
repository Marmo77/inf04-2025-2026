<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="inf04_2023_styczen.MainPage">

    <ScrollView BackgroundColor="LightSteelBlue">
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            >
            <Grid
                ColumnDefinitions="*, *"
                RowDefinitions="Auto"
                WidthRequest="1200"
                ColumnSpacing="30"
                
            >
                <Border Stroke="Gray" StrokeThickness="4" Padding="15" Grid.Column="0">

                    <Grid
                        ColumnDefinitions="*, *"
                        RowDefinitions="*, *, *"
                        RowSpacing="15"
                        >
                        <!-- Imie -->
                    <Label
                        Text="Imię:"
                        FontAttributes="Bold"
                        Grid.Column="0"
                        Grid.Row="0"
                        TextColor="Black"
                        Margin="15,10"
                        
                    />
                    <Entry
                        x:Name="imie"
                        Grid.Column="1"
                        Grid.Row="0"
                        BackgroundColor="White"
                        TextColor="Black"
                    />
                        <!-- Nazwisko -->
                        <Label
                        Text="Nazwisko:"
                        FontAttributes="Bold"
                        Grid.Column="0"
                        TextColor="Black"  
                        Grid.Row="1"
                        Margin="15,10"
                    />

                        <Entry
                        x:Name="nazwisko"
                        Grid.Column="1"
                        Grid.Row="1"
                        BackgroundColor="White"
                        TextColor="Black"
                    />
                        <!-- Stanowisko -->
                        <Label
                        Text="Stanowisko:"
                        FontAttributes="Bold"
                        Grid.Column="0"
                        Grid.Row="3"
                        TextColor="Black"
                        Margin="15,10"
                        
                    />

                        <Picker 
                            Grid.Column="1"
                            Grid.Row="3"
                            x:Name="wyborStanowiska"
                            
                            TextColor="Black"
                            >           
                            <Picker.Items>
                                <x:String>Kierownik</x:String>
                                <x:String>Starszy programista</x:String>
                                <x:String>Młodszy programista</x:String>
                                <x:String>Tester</x:String>
                            </Picker.Items>
                        </Picker>

                    </Grid>
                </Border>
                <!-- Generator hasla -->
                <Frame BorderColor="Gray" CornerRadius="10" Padding="15" Grid.Column="1">

                    <Grid
                    ColumnDefinitions="*, *"
                    RowDefinitions="*, *, *"
                    RowSpacing="15"
                    >      
                        <!-- Imie -->
                        <Label
                             Text="Ile znaków?"
                             FontAttributes="Bold"
                             Grid.Column="0"
                             Grid.Row="0"
         
                             Margin="15,10"
         
                         />
                        <Entry
                             Grid.Column="1"
                             Grid.Row="0"
                             BackgroundColor="White"
                             TextColor="Black"
                         />


                    </Grid>
                </Frame>
            </Grid>
            <VerticalStackLayout>
                <Button 
                    HorizontalOptions="Center"
                    Text="Zatwierdź"
                    Margin="0,15"
                    x:Name="Imie"
                    Padding="30,0"
                    Clicked="WypiszDane"
                    BackgroundColor="SteelBlue"
                        />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
