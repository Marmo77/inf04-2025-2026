<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Desktopowa.MainPage">

    <ScrollView>
        <Grid
            ColumnDefinitions="*,Auto,*"
            BackgroundColor="CadetBlue"
            >
            <Grid Grid.Column="0" Padding="40" RowSpacing="40" RowDefinitions="Auto,Auto,Auto,*">

                <Label
                    Grid.Row="0"
                    Text="Podaj wartość klucza"
                    TextColor="AntiqueWhite"
                    FontSize="Medium"
                    
                />
                <Entry HorizontalOptions="Center" WidthRequest="70" Grid.Row="1" x:Name="Klucz"/>
                    
                <Label
                    Text="Podaj tekst"
                    TextColor="AntiqueWhite"
                    Grid.Row="2"
                    FontSize="Medium"
                />

                <Editor Grid.Row="3" VerticalTextAlignment="Start" x:Name="Tekst"/>
                
                <!--<CollectionView ItemsSource="{Binding}" Grid.Row="3">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label
                                Text="{Binding}"
                                TextColor="Black"
                                />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                -->
            </Grid>
            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                <Button
                    Text="Zaszyfruj"
                    Margin="30,0"
                    BackgroundColor="LightBlue"
                    Clicked="Zaszyfruj"
                    />
            </VerticalStackLayout>
            <Grid Grid.Column="2" Padding="40" RowDefinitions="Auto,*, Auto" RowSpacing="30">
                <Label
                    Text="Tekst zaszyfrowany"
                    FontSize="Medium"
                    TextColor="AntiqueWhite"
                    Grid.Row="0"
                />
                <Frame BorderColor="White" BackgroundColor="CadetBlue" Padding="20,10" CornerRadius="15" Grid.Row="1">
                    <Label x:Name="TekstWyjscie"/>
                </Frame>
                <Button
                    
                    Grid.Row="2"
                    Text="Zapisz szyfr w pliku"
                    BackgroundColor="LightBlue"
                    WidthRequest="400"
                    Clicked="ZapiszTekst"
                    />
            </Grid>
