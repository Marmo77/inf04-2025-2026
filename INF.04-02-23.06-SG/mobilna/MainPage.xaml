<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="INF._04_02_23._06_SG.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20,0"
            Margin="20"
            Spacing="25"
            HorizontalOptions="FillAndExpand">
            <Label
                Text="Właściwości czcionki"
                Background="#558B2F"
                TextColor="White"
                FontSize="Large"
                FontAttributes="Bold"
                />
            <Label
                Text="Rozmiar:"
                x:Name="RozmiarTekstu"
                FontSize="Medium"
                TextColor="Black"
                />
            <Slider
                Minimum="0"
                Maximum="40"
                ValueChanged="HandleSliderChange"
                />
            <Label
                Text="Dzień dobry"
                x:Name="Cytaty"
                TextColor="Black"
                />
            <Button
                Text=">>"
                Clicked="Button_Clicked"
                Background="#558B2F"
                TextColor="White"
                FontAttributes="Bold"
                HorizontalOptions="FillAndExpand"
                
                
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
