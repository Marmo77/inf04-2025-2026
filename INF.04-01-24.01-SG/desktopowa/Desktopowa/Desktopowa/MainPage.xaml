<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Desktopowa.MainPage">

    <ScrollView>
        <Grid
            ColumnDefinitions="*,*"
            Padding="30,20" BackgroundColor="CadetBlue">
            <StackLayout Orientation="Vertical" Grid.Column="0" Padding="25">
                <Grid ColumnDefinitions="3*, 7*" RowDefinitions="*,*,*" RowSpacing="40" Margin="0,20">
                    <Label Text="Numer" Grid.Column="0" Grid.Row="0"/>
                    <Entry Grid.Column="1" Grid.Row="0" Background="Azure" Unfocused="ZmianaNumeru" x:Name="NumerZdj" TextColor="Black"/>

                    <Label Text="Imię" Grid.Column="0" Grid.Row="1"/>
                    <Entry Grid.Column="1" Grid.Row="1" Background="Azure" TextColor="Black" x:Name="Imie"/>

                    <Label Text="Nazwisko" Grid.Column="0" Grid.Row="2"/>
                    <Entry Grid.Column="1" Grid.Row="2" Background="Azure" TextColor="Black" x:Name="Nazwisko"/>
                </Grid>
                <Frame>
                    <VerticalStackLayout>
                        <Label Text="Kolor oczu"/>
                    <RadioButton GroupName="KolorOczu" Content="niebieskie" IsChecked="True" x:Name="koNiebieski"/>
                        <RadioButton GroupName="KolorOczu" Content="zielone" x:Name="koZielony"/>
                        <RadioButton GroupName="KolorOczu" Content="piwne" x:Name="koPiwne"/>
                    </VerticalStackLayout>
                </Frame>

            </StackLayout>
            <StackLayout Orientation="Vertical" Grid.Column="1" Spacing="20">
                <Grid ColumnDefinitions="*,*">
                    <Image 
                        Source="a_zdjecie.jpg"
                        x:Name="OsobaZdjecie"
                        HeightRequest="300"
                        Aspect="AspectFit"
                        Grid.Column="0"
                    />
                    <Image 
                        Source="a_odcisk.jpg"
                        x:Name="OsobaOdcisk"
                        HeightRequest="300"
                        Aspect="AspectFit"
                        Grid.Column="1"
                    />
                </Grid>
                <Button Text="OK" Margin="60,0" Background="Azure" Clicked="KliknietoOK"/>
            </StackLayout>
